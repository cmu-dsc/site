---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found">
  <div id="tsparticles" class="absolute inset-0 -z-10"></div>

  <div
    class="max-w-7xl mx-auto px-4 py-32 min-h-[80vh] flex flex-col items-center justify-center text-center"
  >
    <h1 class="text-6xl font-bold text-[#082b57] mb-4">404</h1>
    <div class="text-xl text-blue-600 mb-4">Page Not Found</div>
    <p class="text-gray-600 max-w-md mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a href="/" class="relative inline-flex items-center justify-center group">
      <span
        class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full blur-md opacity-75 group-hover:opacity-100 transition-opacity duration-300"
      ></span>
      <span
        class="relative bg-[#082b57] text-white px-6 py-3 rounded-full hover:bg-[#082b57]/90 transition-all duration-300 text-sm font-medium"
      >
        Return Home
      </span>
    </a>
  </div>
</Layout>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>

